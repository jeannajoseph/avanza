<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Coach Dashboard</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="d-flex flex-column min-vh-100">
      <%- include('partials/navbar', { session: session, page: 'login' }) %>

  <main class="flex-fill">

  <div class="container">
        <div class="container pt-5">

    <h1 class="mb-4">Welcome, <%= coach.name %></h1>
    </div>

    <% if (!coach.googleTokens || !coach.googleTokens.access_token || googleConnected == false) { %>
      <div class="alert alert-warning">
        Your Google Calendar is not connected.
        <a href="/auth/google" class="btn btn-sm btn-primary ms-2">Connect Calendar</a>
      </div>
    <% } else { %>
      <div class="alert alert-success">âœ… Google Calendar is connected.</div>
    <% } %>

    <h3>Availability Slots</h3>
    <% if (!coach.availability || coach.availability.length === 0) { %>
      <p>No availability slots added yet.</p>
    <% } else { %>
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Date</th>
            <th>Start</th>
            <th>End</th>
            <th>Booked?</th>
            <th>Student</th>
          </tr>
        </thead>
        <tbody>
          <% coach.availability.forEach(slot => { %>
            <tr>
              <td><%= slot.date.toDateString() %></td>
              <td><%= slot.startTime %></td>
              <td><%= slot.endTime %></td>
              <td><%= slot.isBooked ? 'Yes' : 'No' %></td>
              <td><%= slot.student ? slot.student.name : '-' %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    <% } %>
  </div>
    </main>

          <%- include('partials/footer') %>

</body>
</html>
