  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

  <!-- Slideshow JavaScript Logic -->
  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const images = document.querySelectorAll('#slideshow-container img');
      let currentImageIndex = 0;
      const intervalTime = 5000; // 5 seconds

      // Set initial state: only the first image should be visible
      if (images.length > 0) {
        images.forEach(img => img.style.opacity = '0'); // Ensure all are initially hidden
        images[currentImageIndex].style.opacity = '1'; // Show the first one
      }

      function nextSlide() {
        // 1. Hide the current image
        images[currentImageIndex].style.opacity = '0';

        // 2. Calculate the index of the next image (looping)
        currentImageIndex = (currentImageIndex + 1) % images.length;

        // 3. Show the next image
        images[currentImageIndex].style.opacity = '1';
      }

      // Start the slideshow interval
      if (images.length > 1) {
        setInterval(nextSlide, intervalTime);
      }
    });
  </script>
