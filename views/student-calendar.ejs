<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Student Calendar</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body class="d-flex flex-column min-vh-100">

      <%- include('partials/navbar', { session: session, page: 'login' }) %>
  <main class="flex-fill">

  <div class="container">
    <div class="container pt-5">

    <h1 class="mb-4">Coach Availability</h1>
    </div>

    <% allCoachEvents.forEach(item => { %>
      <div class="card mb-3 p-3">
        <h4><%= item.coachName %></h4>
        <p><strong>Expertise:</strong> <%= item.expertise && item.expertise.length ? item.expertise.join(", ") : "None listed" %></p>

        <% if (item.notConnected) { %>
          <div class="alert alert-warning">
            This coach has not connected their Google Calendar.
            <a href="/coach/google/connect?coachId=<%= item.coachId %>" class="btn btn-sm btn-primary ms-2">
              Connect Calendar
            </a>
          </div>
        <% } else { %>
          <% if (!item.events || item.events.length === 0) { %>
            <p>No upcoming availability.</p>
          <% } else { %>
            <ul class="list-group">
              <% item.events.forEach(event => { %>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                  <div>
                    <strong><%= event.summary || "No title" %></strong><br>
                    <small><%= event.start.dateTime || event.start.date %></small>
                  </div>
                  <% if (!event.isBooked) { %>
                    <form method="POST" action="/student/book">
                      <input type="hidden" name="coachId" value="<%= item.coachId %>">
                      <input type="hidden" name="eventId" value="<%= event.id %>">
                      <button class="btn btn-sm btn-primary">Book</button>
                    </form>
                  <% } else { %>
                    <span class="badge bg-secondary">Booked</span>
                  <% } %>
                </li>
              <% }) %>
            </ul>
          <% } %>
        <% } %>
      </div>
    <% }) %>
  </div>
  </main>
        <%- include('partials/footer') %>

</body>
</html>
